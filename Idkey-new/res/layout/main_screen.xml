<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_black"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_rect_img"
            android:src="@drawable/key_icon" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="5.5"
        android:background="@drawable/round_rect_black"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_home_tutorial"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_size"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_button_tutorial"
                android:onClick="onClickTutorial" />

            <!--
            <Button
                android:id="@+id/btn_home_tutorial"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_size"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_rect_blue"
                android:text="Tutorial"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_medium" />
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_home_my_acc"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_button_account" />

                <!--
                     <Button
                    android:id="@+id/btn_home_my_acc"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_blue"
                    android:text="My Account"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_medium" />
                -->

                <Button
                    android:id="@+id/btn_home_settings"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_button_settings"
                    android:onClick="onClickSettingsButton" />
                -

                <!--
                     <Button
                    android:id="@+id/btn_home_settings"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_blue"
                    android:onClick="onClickSettingsButton"
                    android:text="Settings"
                    android:textColor="#FFFFFF" />
                -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <!--
                     <Button
                    android:id="@+id/btn_home_add_new_key"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_blue"
                    android:onClick="onClickAddNewKey"
                    android:text="Add New Key"
                    android:textColor="#FFFFFF" />
                -->

                <Button
                    android:id="@+id/btn_home_add_new_key"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_button_add"
                    android:onClick="onClickAddNewKey"
                    android:textColor="#FFFFFF" />

                <!--
                     <Button
                    android:id="@+id/btn_home_id_a_key"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_blue"
                    android:text="I.D a Key"
                    android:textColor="#FFFFFF" />
                -->

                <Button
                    android:id="@+id/btn_home_id_a_key"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="onClickIdentifyKey"
                    android:background="@drawable/home_button_id"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <!--
                     <Button
                    android:id="@+id/btn_home_key_listing"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_blue"
                    android:onClick="onClickKeyList"
                    android:text="Key Listing"
                    android:textColor="#FFFFFF" />
                -->

                <Button
                    android:id="@+id/btn_home_key_listing"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_button_keys"
                    android:onClick="onClickKeyList"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn_home_categories"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_button_categories"
                    android:onClick="onClickCategories" />

                <!--
                     <Button
                    android:id="@+id/btn_home_categories"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_size"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_blue"
                    android:onClick="onClickCategories"
                    android:text="Categories"
                    android:textColor="#FFFFFF" />
                -->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>